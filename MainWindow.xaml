<Window x:Class="Business_System_Laboration_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Business_System_Laboration_4"
        mc:Ignorable="d"
        Title="Affärssystem laboration 4" Height="720" Width="1080" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <TabControl Margin="0 10 0 0">
            <TabItem Header="Kassa" DataContext="{Binding CheckoutViewModel}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="799*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Text="Böcker" VerticalAlignment="Center" Margin="10,0,0,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Dataspel" VerticalAlignment="Center" Margin="10,0,0,0" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Filmer" VerticalAlignment="Center" Margin="10,0,0,0" Grid.ColumnSpan="2"/>

                    <DockPanel LastChildFill="False" Grid.Column="2" Grid.Row="0" Margin="0,0,10,0">
                        <TextBlock Text="Varukorg" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                        <Label Content="Totalt:" VerticalAlignment="Center" DockPanel.Dock="Right"/>
                    </DockPanel>

                    <ListBox ItemsSource="{Binding CheckoutViewModel.CartItems}" Grid.Column="2" Grid.Row="1" Margin="0 0 10 10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Id}"/>
                                    <Button Grid.Column="3" Content="Remove" Command="{Binding DataContext.RemoveFromCart, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" CommandParameter="{Binding}" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>


                    <DockPanel LastChildFill="False" Grid.Column="2" Grid.Row="1" Margin="0,195,10,0" Grid.RowSpan="2">
                        <Button Content="Genomför Köp" VerticalAlignment="Center" DockPanel.Dock="Right" Width="100"/>
                    </DockPanel>

                    <DataGrid Grid.Row="1" Grid.Column="0"  Margin="10,0,10,10" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="" IsReadOnly="True" Width="100"/>
                            <DataGridTemplateColumn Header="Namn" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Författare" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Genre" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Format" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Språk" IsReadOnly="True" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid Grid.Row="3" Grid.Column="0"  Margin="10,0,10,10" Grid.ColumnSpan="2" >
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="" IsReadOnly="True" Width="100"/>
                            <DataGridTemplateColumn Header="Namn" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Plattform" IsReadOnly="True" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid Grid.Row="5" Grid.Column="0"  Margin="10,0,10,10" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="" IsReadOnly="True" Width="100"/>
                            <DataGridTemplateColumn Header="Namn" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Format" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Speltid" IsReadOnly="True" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Lager" DataContext="{Binding StaffViewModel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="1" Text="Böcker" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBlock Grid.Row="3" Text="Dataspel" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBlock Grid.Row="5" Text="Filmer" VerticalAlignment="Center" Margin="10,0,0,0"/>

                    <StackPanel x:Name="buttonStack" Grid.Row="0" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Margin" Value="10,0,0,0"/>
                            </Style>
                        </StackPanel.Resources>
                        <Button Content="Lägg till produkt" Width="100" Height="30"/>
                        <Button Content="Ta bort produkter" Width="100" Height="30"/>
                        <Button Content="Lägg till leverans" Width="100" Height="30"/>
                    </StackPanel>
                   
                    
                    <DataGrid Grid.Row="2" Margin="10,0,10,10">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn CanUserResize="False" Width="Auto">
                                <DataGridCheckBoxColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <CheckBox/>
                                    </DataTemplate>
                                </DataGridCheckBoxColumn.HeaderTemplate>
                            </DataGridCheckBoxColumn>

                            <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="Auto"/>
                            <DataGridTemplateColumn Header="Antal" IsReadOnly="True" Width="Auto"/>
                            <DataGridTemplateColumn Header="Namn" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Pris" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Författare" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Genre" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Format" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Språk" IsReadOnly="True" Width="*"/>
                        </DataGrid.Columns>
                        
                    </DataGrid>
                    
                    <DataGrid Grid.Row="4" Margin="10,0,10,10" SelectionChanged="DataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn CanUserResize="False" Width="Auto">
                                <DataGridCheckBoxColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <CheckBox/>
                                    </DataTemplate>
                                </DataGridCheckBoxColumn.HeaderTemplate>
                            </DataGridCheckBoxColumn>
                            <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="Auto"/>
                            <DataGridTemplateColumn Header="Antal" IsReadOnly="True" Width="Auto"/>
                            <DataGridTemplateColumn Header="Namn" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Plattform" IsReadOnly="True" Width="*"/>
                            
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    
                    <DataGrid Grid.Row="6" Margin="10,0,10,10">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn CanUserResize="False" Width="Auto">
                                <DataGridCheckBoxColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <CheckBox/>
                                    </DataTemplate>
                                </DataGridCheckBoxColumn.HeaderTemplate>
                            </DataGridCheckBoxColumn>
                            <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="Auto"/>
                            <DataGridTemplateColumn Header="Antal" IsReadOnly="True" Width="Auto"/>
                            <DataGridTemplateColumn Header="Namn" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Format" IsReadOnly="True" Width="*"/>
                            <DataGridTemplateColumn Header="Speltid" IsReadOnly="True" Width="*"/>
                            
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>